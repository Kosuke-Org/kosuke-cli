#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check if we have TypeScript/JavaScript files in the commit
js_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx)$' || true)

# Run Node.js checks if there are JS/TS files
if [ -n "$js_files" ]; then
  echo "ğŸŒ Running code quality checks..."

  # Run linting and formatting
  echo "  â†’ Running lint-staged checks..."
  npm run lint-staged
  if [ $? -ne 0 ]; then
    echo "âŒ Lint-staged checks failed. Please fix the errors before committing."
    exit 1
  fi

  # Run type checking
  echo "  â†’ Running TypeScript type checking..."
  npm run typecheck
  if [ $? -ne 0 ]; then
    echo "âŒ Type checking failed. Please fix the type errors before committing."
    exit 1
  fi

  # Run tests
  echo "  â†’ Running tests..."
  npm test
  if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Please fix the failing tests before committing."
    exit 1
  fi

  # Run knip
  echo "  â†’ Running Knip..."
  npm run knip
  if [ $? -ne 0 ]; then
    echo "âŒ Knip check failed. Please fix unused exports/dependencies before committing."
    exit 1
  fi

  echo "âœ… Code quality checks passed!"
fi

echo "âœ… All pre-commit checks passed!"
