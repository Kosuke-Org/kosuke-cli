{
  "name": "@kosuke-ai/cli",
  "version": "0.0.23",
  "description": "Kosuke CLI - Development automation tool for syncing rules and analyzing code quality",
  "keywords": [
    "CLI",
    "automation",
    "code-quality",
    "claude-ai"
  ],
  "homepage": "https://github.com/Kosuke-Org/kosuke-cli#readme",
  "bugs": {
    "url": "https://github.com/Kosuke-Org/kosuke-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kosuke-Org/kosuke-cli.git"
  },
  "license": "ISC",
  "author": "filippo.pedrazzini@kosuke.ai",
  "type": "module",
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "bin": {
    "kosuke": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    },
    "./cli": "./dist/index.js"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "dev": "tsx index.ts",
    "dev:link": "npm run build && npm link && npm run build:watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "lint-staged": "lint-staged",
    "check:all": "npm run lint && npm run typecheck && npm test && npm run knip"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@octokit/rest": "^20.0.0",
    "dotenv": "^16.4.0",
    "glob": "^10.3.0",
    "ignore": "^5.3.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.11.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "knip": "^5.45.3",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix --max-warnings 0",
      "vitest related --run"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
